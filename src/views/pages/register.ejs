<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Form</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <form action="/register" method="POST" enctype="multipart/form-data">
      <h1>User Registration Form</h1>

      <section class="container-progressbar">
        <ul id="progressbar-ul">
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
            <li class="progressbar"></li>
        </ul>
    </section>

      <div><%- include ("../partials/soloOrBand") %></div>
      <div><%- include ("../partials/bandSigningUp.ejs") %></div>
      <div><%- include ("../partials/genderSelect.ejs") %></div>
      <div><%- include ("../partials/birthdays.ejs") %></div>
      <div><%- include ("../partials/genreSelect") %></div>
      <div><%- include ("../partials/instrumentSelect") %></div>
      <div><%- include ("../partials/addVideo") %></div>
      <div><%- include ("../partials/addDiscription") %></div>
      <div><%- include ("../partials/addLocation") %></div>

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required /><br /><br />

      <label for="isSoloArtist">Are you a solo artist?</label>
      <input
        type="checkbox"
        id="isSoloArtist"
        name="isSoloArtist"
        value="true"
      /><br /><br />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
      /><br /><br />

      <label for="bandName">Band Name:</label>
      <input type="text" id="bandName" name="bandName" /><br /><br />

      <h2>Members</h2>
      <div id="members">
        <div class="member">
          <label for="memberName">Name:</label>
          <input type="text" name="memberName" /><br /><br />

          <label for="memberPfp">Profile Picture:</label>
          <input type="file" name="memberPfp" /><br /><br />

          <label for="memberGender">Gender:</label>
          <input type="text" name="memberGender" required /><br /><br />

          <label for="memberBirthday">Birthday:</label>
          <input type="date" name="memberBirthday" required /><br /><br />
        </div>
      </div>
      <button type="button" onclick="addMember()">Add Member</button
      ><br /><br />

      <label for="genres">Genres:</label>
      <input type="text" id="genres" name="genres" required /><br /><br />

      <label for="userInstruments">Instruments:</label>
      <input
        type="text"
        id="userInstruments"
        name="userInstruments"
        required
      /><br /><br />

      <button type="submit">Submit</button>
    </form>

    <script src="script.js"></script>
    <script>
      function addMember() {
        const memberDiv = document.createElement("div");
        memberDiv.classList.add("member");
        memberDiv.innerHTML = `
                <label for="memberName">Name:</label>
                <input type="text" name="memberName"><br><br>

                <label for="memberPfp">Profile Picture:</label>
                <input type="file" name="memberPfp"><br><br>

                <label for="memberGender">Gender:</label>
                <input type="text" name="memberGender" required><br><br>

                <label for="memberBirthday">Birthday:</label>
                <input type="date" name="memberBirthday" required><br><br>
            `;
        document.getElementById("members").appendChild(memberDiv);
      }
    </script>
  </body>
</html>
